<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> User</legend>

		<%= f.input :f_name, prompt: "First Name" %>
		<%= f.input :l_name, prompt: "Last Name" %>
    <%= f.input :username, prompt: "Username" %>
		<%= f.input :email, prompt: "Email" %>
    <%= f.input :phone, prompt: "Phone Number" %>

		<%= f.input :password, prompt: "Create a Password" %>
		<%= f.input :password_confirmation, prompt: "Confirm Password" %>

		<%= f.input :active%>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel',users_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
