<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
<div class="container">

  <div class="divider"></div>
  <br><br>

  <div class="section">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= f.input :f_name, :params => :f_name %>
        </div>
        <div class="input-field col s6">
          <%= f.input :l_name, :params => :l_name %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.input :username, :params => :username %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.input :email, :params => :email %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.input :phone, :params => :phone %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s6">
          <%= f.input :password, :params => :password %>
        </div>
        <div class="input-field col s6">
          <%= f.input :password_confirmation, :params => :password_confirmation %>
        </div>
      </div>
      
      <div class="form-actions">
        <div class="waves-effect waves-light btn right blue lighten-2"><%= f.submit %></div>
        <div class="waves-effect waves-light btn left blue lighten-2"><%= link_to 'Cancel', root_path %></div>
      </div>
    </form>
  </div>
  <br><br><br><div class="divider"></div><br><br>
<% end %>
</div>