<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
<div class="container">

  <h3>CREATE ACCOUNT</h3>
  <div class="divider"></div>
  <br><br>

  <div class="section">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= f.input :first_name, :params => :first_name %>
        </div>
        <div class="input-field col s6">
          <%= f.input :last_name, :params => :last_name %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.input :username, :params => :username %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.input :email, :params => :email %>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.input :phone_number, :params => :phone_number %>
        </div>
      </div>
      
      <div class="form-actions">
        <div class="waves-effect waves-light btn right"><%= f.submit %></div>
        <div class="waves-effect waves-light btn left"><%= link_to 'Cancel', users_path %></div>
      </div>
    </form>
  </div>
  <br><br><br><div class="divider"></div><br><br>
<% end %>
</div>