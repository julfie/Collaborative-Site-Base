<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<div class="row">
  <div class="col s8 offset-s2">
    <table class="bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Username</th>
          <th>Active?</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      
      <tbody class="center">
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.username %></td>
          <td><%= user.active %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>
<br>

<div class="row">
    <%= link_to 'Add New User', new_user_path, class:'col s2 offset-s2' %>
</div>

