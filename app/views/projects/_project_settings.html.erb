<form class="col s12">
    <div class="row">
        <div class="input-field col s12">
            <%= f.input :preview_level %>
        </div>
    </div>
    
    <div class="row">
        <div class="input-field col s12">
            <%= f.input :status %>
        </div>
    </div>
    
    <div class="form-actions row">
        <div class="waves-effect waves-light btn right">  
            <%= f.submit nil, :class => 'button radius' %>
        </div>
        <div class="waves-effect waves-light btn left">
            <%= link_to 'Back', projects_path %>
        </div>
    </div>
</form>

