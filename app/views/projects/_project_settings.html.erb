<div class="center">
    <form class="col s12">
        
        <div class="row">
            <div class="input-field col s12">
                <%= text_field_tag(:preview_level, params[:preview_level], :'value' => 'Public') %>
                <label for="privacy">Privacy</label>
            </div>
        </div>
        
        <div class="row">
            <div class="input-field col s12">
                <%= text_field_tag(:status, params[:status], :'value' => 'Active') %>
                <label for="category">Category</label>
            </div>
        </div>
        <div class="waves-effect waves-light btn right">
            <%= submit_tag "Submit" %>
        </div>

    </form>
</div>