<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :proj_description %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.input :status, collection: ["active", "hiatus", "finished", "cancelled"] %>
    <%= f.input :preview_level, collection: ["hidden", "by_invitation", "preview"] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
