<h1>Listing Project Roles</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Role</th>
      <th>User</th>
      <th>Invite num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_roles.each do |project_role| %>
      <tr>
        <td><%= project_role.project_id %></td>
        <td><%= project_role.role_id %></td>
        <td><%= project_role.user_id %></td>
        <td><%= project_role.invite_num %></td>
        <td><%= link_to 'Show', project_role %></td>
        <td><%= link_to 'Edit', edit_project_role_path(project_role) %></td>
        <td><%= link_to 'Destroy', project_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

