<%= simple_form_for @project_role, :html => { :class => 'form-horizontal' } do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <div class="col s8 m9 l6">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <%= f.input :user_id, :params => :user %>
        </div>
        <div class="input-field col s6">
          <%= f.input :role_id, :params => :role %>
        </div>
        <div class="input-field col s12">
          <% f.input role_id: @project.id %>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
