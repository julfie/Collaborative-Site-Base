<!-- login/accont options -->
<li>
  <div class="fixed-action-btn">
    <%= image_tag  "account_icon.png", class:"btn-floating btn-large" %>
    <ul>
      <li>
        <% if logged_in? %>
          <%= link_to user_path(current_user), class:"btn-floating black" do %>
          <i class="material-icons">person_pin</i>
        <% end %>
      </li>
      <li>
          <% if logged_in? %>
            <%= link_to logout_path, class:"btn-floating black" do %>
              <i class="material-icons">lock</i>
            <% end %>
          <% else %>
            <%= link_to login_path, class:"btn-floating black" do %>
              <i class="material-icons">person_pin</i>
            <% end %>
          <% end %>
      </li>
      <li><a class="btn-floating black"><i class="material-icons">publish</i></a></li>
      <li><a class="btn-floating black"><i class="material-icons">attach_file</i></a></li>
    </ul>
  </div>
